{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
        "@models/*": ["./src/models/*"],
        "@interactors/*": ["./src/interactors/*"],
        "@persistance/*": ["./src/persistance/*"],
    },
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.js"],
  "exclude": ["node_modules"],
  
}
